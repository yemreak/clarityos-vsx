{
	"name": "clarityos",
	"displayName": "ClarityOS",
	"description": "Bridge Claude Code, Git, and VSCode into a unified knowledge system. @ file links, git commit hover, Claude session integration.",
	"version": "0.0.1",
	"publisher": "yemreak",
	"icon": "icon.png",
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": ["Programming Languages"],
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:markdown",
		"onLanguage:swift",
		"onLanguage:typescript",
		"onLanguage:python"
	],
	"contributes": {
		"grammars": [{
			"scopeName": "markdown.clarityos.injection",
			"path": "./syntaxes/clarityos.injection.json",
			"injectTo": ["text.html.markdown", "source.swift", "source.ts", "source.tsx", "source.python"]
		}],
		"languages": [{
			"id": "markdown",
			"extensions": [".md"]
		}, {
			"id": "swift",
			"extensions": [".swift"]
		}, {
			"id": "typescript",
			"extensions": [".ts", ".tsx"]
		}, {
			"id": "python",
			"extensions": [".py"]
		}],
		"themes": [{
			"label": "Starry Night",
			"uiTheme": "vs-dark",
			"path": "./themes/starry-night.json"
		}]
	},
	"scripts": {
		"build": "bun build ./src/extension.ts --outdir ./out --target node --format cjs --sourcemap --external vscode",
		"package": "vsce package --no-dependencies --allow-missing-repository",
		"install": "bun run build && bun run package && cursor --install-extension clarity-vscode-*.vsix && rm -f clarity-vscode-*.vsix && rm -rf out node_modules"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "^20.0.0",
		"@types/bun": "latest",
		"vscode": "^1.1.37"
	}
}